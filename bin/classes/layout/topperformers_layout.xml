<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" > 


    <TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="1dp"
    android:stretchColumns="7"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="#FFFFFF" >
    
    <TableRow
        android:layout_width="fill_parent">        
    <!-- **Asset id -->
    <TextView android:id="@+id/assetid"
        android:width="0dp"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:gravity="left"/>
    
    <!-- **Asset name -->
    <TextView android:id="@+id/assetname"
        android:width="0dp"
        android:layout_weight="2"
        android:layout_gravity="left"
        android:gravity="left"/>
    
    <!-- **Asset return -->
    <TextView android:id="@+id/assetreturn"
        android:width="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:gravity="right"/>
    
    <!-- **Asset earnings -->
    <TextView android:id="@+id/earnings"
        android:width="1dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:gravity="right"
        android:includeFontPadding="false"
        android:textAlignment="textEnd" />
    
    <!-- **Asset maktval -->
    <TextView android:id="@+id/mktval"
        android:width="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:gravity="right"/>
    
    
    <!-- **Asset allocation -->
    <TextView android:id="@+id/allocation"
        android:width="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:gravity="right"/>
    
    
    <!-- **Asset pergl -->
    <TextView android:id="@+id/assetclasscount"
        android:width="1dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:gravity="right"
        android:includeFontPadding="false"
        android:paddingRight="5dp" />
   </TableRow> 
 </TableLayout>
 
</LinearLayout>