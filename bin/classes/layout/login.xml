<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#DEDEDE">
 
        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/header_gradient"
                android:paddingTop="5dip"
                android:gravity="center"
                android:paddingBottom="0dip">
                <!-- Logo Start-->
                <ImageView android:src="@drawable/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip" />
                <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->
        <!-- Footer Start -->
        
 
        <!-- Login Form -->
        <LinearLayout 
          android:orientation="vertical"
          android:layout_width="350dip"
          android:layout_height="wrap_content"
          android:padding="10dip"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="50dip"
          android:gravity="center"
          android:background="#FFFFFF"
          android:layout_below="@id/header">
          <!--  form title Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="Login" />
          <TextView android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#DEDEDE"
                android:layout_marginTop="5dip"
                android:text=" " />
          
          <!-- Username label -->
          <EditText android:id="@+id/txtUserID"
                android:layout_width="300dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="20dip"
                android:background="#DEDEDE"
                android:text="samini" />
          <!-- password label -->
          <EditText android:id="@+id/txtPassword"
              android:layout_width="300dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:background="#DEDEDE"
                android:password="true"
                android:text="SAfirst@1" />
          <!-- sitekey or client ID -->
          <EditText android:id="@+id/txtSiteKey" 
              android:layout_width="300dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:background="#DEDEDE"
                android:text="27" />
          <!-- Login button -->
          <Button android:id="@+id/btnLogin"
                android:layout_width="100dip"
                android:layout_height="22dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/go"
                android:text=" "/>
          <!-- regestration button -->
          <!-- only aviable for regestration
          <Button android:id="@+id/btnRegister"
                android:layout_width="100dip"
                android:layout_height="22dip"
                android:layout_marginLeft="110dip"
                android:layout_marginTop="-25dip"
                android:background="@drawable/register"
                android:text=" "/> -->
          
          <!-- horozintal line -->
         <TextView android:id="@+id/login_error" 
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#DEDEDE"
                android:layout_marginTop="15dip"
                android:text=" " />
         <!-- help link -->
         <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:paddingLeft="10dip"
                android:layout_marginTop="10dip"
                android:clickable="true"
                android:onClick="showHelpDialog"
                android:text="Help for User ID / Password" />
         
         <!-- Legal information -->
         <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:paddingLeft="10dip"
                android:layout_marginTop="10dip"
                android:clickable="true"
                android:text="Legal Information"
                android:onClick="showLegalInfo" />
 
        </LinearLayout>
        <!-- Login Form Ends -->
  </RelativeLayout>
</ScrollView>
